<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    @DOTNET_TFM@
    <RuntimeIdentifier>@DOTNET_RID@</RuntimeIdentifier>
    <AssemblyName>highs-native</AssemblyName>
    <Version>@PROJECT_VERSION@</Version>

    <!-- Nuget Properties -->
    <Description>.NET native wrapper for the HiGHS solver</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>

    <!-- Pack Option -->
    <Title>Highs @DOTNET_RID@ v@PROJECT_VERSION@</Title>
    <PackageId>@DOTNET_NATIVE_PROJECT@</PackageId>

  </PropertyGroup>

  <ItemGroup>
    <!-- Native library must be in native directory... -->
    <!-- If highs is built as a STATIC_LIBRARY (e.g. Windows) then we don't have to include it -->
    <Content Include="
      $<TARGET_FILE:highs>
      $<$<STREQUAL:$<TARGET_PROPERTY:@PROJECT_NAME@,TYPE>,SHARED_LIBRARY>:;$<TARGET_SONAME_FILE:@PROJECT_NAME@>>
    ">
      <PackagePath>runtimes/@DOTNET_RID@/native/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
